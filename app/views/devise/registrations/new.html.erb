<div class="auth">
  <h2 class="auth-heading">はじめよう</h2>
  <p class="auth-sub">節約を「収入」に変える第一歩</p>

  <%= render "devise/shared/error_messages", model: resource %>

  <%= form_with model: resource, url: registration_path(resource_name), local: true, class: "auth-form" do |f| %>
    <div class="field-group">
      <label class="field-label">ニックネーム</label>
      <%= f.text_field :nickname, autofocus: true, class: "field-input", placeholder: "例）節約太郎", maxlength: "50" %>
    </div>

    <div class="field-group">
      <label class="field-label">メールアドレス</label>
      <%= f.email_field :email, class: "field-input", placeholder: "example@mail.com" %>
    </div>

    <div class="field-group">
      <label class="field-label">パスワード</label>
      <%= f.password_field :password, autocomplete: "new-password", class: "field-input", placeholder: "6文字以上" %>
      <span class="field-hint">英字と数字を含めてください</span>
    </div>

    <div class="field-group">
      <label class="field-label">パスワード（確認）</label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field-input", placeholder: "もう一度入力" %>
    </div>

    <div class="field-group">
      <label class="field-label">あなたの時給（円）</label>
      <%= f.number_field :hourly_rate, class: "field-input", placeholder: "1200", min: 0, inputmode: "numeric" %>
      <span class="field-hint">節約を時間に換算するために使います</span>
    </div>

    <%= f.submit "アカウントを作成", class: "auth-submit" %>
  <% end %>

  <div class="auth-switch">
    すでにアカウントをお持ちの方は <%= link_to "ログイン", new_user_session_path %>
  </div>
</div>
