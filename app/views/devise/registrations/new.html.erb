<div class="auth-container">
  <div class="auth-card">
    <h2>新規登録</h2>
    <p class="auth-subtitle">アカウントを作成して節約を始めましょう</p>

    <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
      <%= render "devise/shared/error_messages", model: resource %>

      <div class="form-group">
        <%= f.label :nickname, "ニックネーム" %>
        <%= f.text_field :nickname, autofocus: true, class: "form-control", placeholder: "例）節約幸子", maxlength: "50" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "form-control", placeholder: "example@mail.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "6文字以上の半角英数字" %>
        <small>※英字と数字の両方を含めてください</small>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード（確認）" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "もう一度入力してください" %>
      </div>

      <div class="form-group">
        <%= f.label :hourly_rate, "あなたの時給（円）" %>
        <%= f.number_field :hourly_rate, class: "form-control", placeholder: "例）1200", min: 0 %>
        <small>※節約額を時間に換算するために使用します</small>
      </div>

      <div class="form-group">
        <%= f.submit "アカウントを作成", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <p>すでにアカウントをお持ちの方は <%= link_to "ログイン", new_user_session_path %></p>
    </div>
  </div>
</div>
