<div class="auth-container">
  <div class="auth-card">
    <h2>プロフィール編集</h2>
    <p class="auth-subtitle">アカウント情報を変更できます</p>

    <%= render "devise/shared/error_messages", model: resource %>

    <%= form_with model: resource, url: registration_path(resource_name), method: :patch, local: true do |f| %>
      <div class="form-group">
        <%= f.label :nickname, "ニックネーム" %>
        <%= f.text_field :nickname, class: "form-control", placeholder: "例）節約幸子" %>
      </div>

      <div class="form-group">
        <%= f.label :hourly_rate, "時給（円）" %>
        <%= f.number_field :hourly_rate, class: "form-control", placeholder: "例）1200", min: 0 %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "新しいパスワード" %>
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "変更しない場合は空欄" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "新しいパスワード（確認）" %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "変更しない場合は空欄" %>
      </div>

      <div class="form-group">
        <%= f.submit "変更を保存", class: "btn btn-primary" %>
      </div>
    <% end %>

    <!-- ホームに戻る -->
    <div class="cancel-container">
      <%= link_to "← ホームに戻る", root_path, class: "btn-secondary" %>
    </div>

    <!-- アカウント削除 -->
    <div class="delete-account-container">
      <p>アカウントを削除する場合</p>
      <button id="delete-account-btn" class="btn-danger">アカウントを削除</button>
    </div>
  </div>
</div>

<!-- アカウント削除確認モーダル -->
<div id="delete-confirm-modal" class="modal">
  <div class="modal-content">
    <p>本当にアカウントを削除しますか？<br><small style="color: var(--color-text-muted);">この操作は取り消せません</small></p>
    <div class="modal-actions">
      <button class="btn btn-secondary">キャンセル</button>
      <%= button_to "削除する", registration_path(resource), method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>
