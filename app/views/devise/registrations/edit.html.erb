<div class="auth">
  <h2 class="auth-heading">設定</h2>
  <p class="auth-sub">アカウント情報を変更できます</p>

  <%= render "devise/shared/error_messages", model: resource %>

  <%= form_with model: resource, url: registration_path(resource_name), method: :patch, local: true, class: "auth-form" do |f| %>
    <div class="field-group">
      <label class="field-label">ニックネーム</label>
      <%= f.text_field :nickname, class: "field-input" %>
    </div>

    <div class="wage-section" data-controller="wage">
      <p class="field-label">時給</p>

      <div class="wage-tabs">
        <button type="button" class="wage-tab wage-tab--active" data-wage-target="tabHourly" data-action="wage#switchHourly">時給で入力</button>
        <button type="button" class="wage-tab" data-wage-target="tabMonthly" data-action="wage#switchMonthly">月収から算出</button>
      </div>

      <div data-wage-target="hourlyGroup">
        <div class="field-group">
          <%= f.number_field :hourly_rate, class: "field-input", placeholder: "例）1200", min: 0, inputmode: "numeric", data: { wage_target: "hourlyInput" } %>
          <span class="field-hint">現在の設定: ¥<%= number_with_delimiter(resource.hourly_rate) %>/時</span>
        </div>
      </div>

      <div data-wage-target="monthlyGroup" style="display: none">
        <div class="field-group">
          <input type="number" class="field-input" placeholder="例）250000" min="0" inputmode="numeric" data-action="input->wage#calculate">
          <span class="wage-computed" data-wage-target="computed"></span>
        </div>
      </div>
    </div>

    <div class="field-group">
      <label class="field-label">メールアドレス</label>
      <%= f.email_field :email, class: "field-input" %>
    </div>

    <div class="field-group">
      <label class="field-label">新しいパスワード</label>
      <%= f.password_field :password, class: "field-input", autocomplete: "new-password", placeholder: "変更しない場合は空欄" %>
    </div>

    <div class="field-group">
      <label class="field-label">新しいパスワード（確認）</label>
      <%= f.password_field :password_confirmation, class: "field-input", autocomplete: "new-password", placeholder: "変更しない場合は空欄" %>
    </div>

    <%= f.submit "変更を保存", class: "auth-submit" %>
  <% end %>

  <%= link_to "← ホームに戻る", root_path, class: "back-link" %>

  <!-- アカウント削除 -->
  <div class="danger-zone">
    <p>アカウントを削除する場合</p>
    <button id="delete-account-btn" class="danger-btn">アカウントを削除</button>
  </div>
</div>

<!-- 削除確認モーダル（ボトムシート） -->
<div id="delete-confirm-modal" class="modal">
  <div class="modal-box">
    <p>本当にアカウントを削除しますか？</p>
    <small>この操作は取り消せません</small>
    <div class="modal-btns">
      <button class="btn-cancel">キャンセル</button>
      <%= button_to "削除する", registration_path(resource), method: :delete, class: "btn-destroy" %>
    </div>
  </div>
</div>
