<h2>プロフィール編集</h2>
<%= render "devise/shared/error_messages", model: resource %>

<%= form_with model: resource, url: registration_path(resource_name), method: :patch, local: true do |f| %>
  <div class="form-group">
    <%= f.label :nickname, "ニックネーム" %>
    <%= f.text_field :nickname, class: "form-control", placeholder: "例) 節約幸子" %>
  </div>

  <div class="form-group">
    <%= f.label :hourly_rate, "時給" %>
    <%= f.number_field :hourly_rate, class: "form-control", placeholder: "例) 1000" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class: "form-control", placeholder: "PC・携帯どちらでも可" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "新しいパスワード" %>（変更しない場合は空欄）
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "新しいパスワード（確認用）" %>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.submit "変更を保存", class: "btn btn-primary" %>
  </div>
<% end %>

<!-- キャンセルの誘導文とボタン -->
<div class="cancel-container">
  <p>編集をキャンセルする場合はこちら：</p>
  <%= link_to "ホームに戻る", root_path, class: "btn btn-secondary" %>
</div>

<!-- アカウント削除ボタン -->
<div class="delete-account-container">
  <p>アカウントを削除する場合はこちら：</p>
  <button id="delete-account-btn" class="btn btn-danger">アカウントを削除する</button>
</div>

<!-- アカウント削除確認モーダル -->
<div id="delete-confirm-modal" class="modal">
  <div class="modal-content">
    <p>本当にアカウントを削除しますか？</p>
    <%= button_to "削除する", registration_path(resource), method: :delete, class: "btn btn-danger" %>
    <button class="btn btn-secondary">キャンセル</button>
  </div>
</div>

