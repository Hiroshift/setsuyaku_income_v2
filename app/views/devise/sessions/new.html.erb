<div class="auth">
  <h2 class="auth-heading">おかえりなさい</h2>
  <p class="auth-sub">ログインして節約を続けましょう</p>

  <%= render "devise/shared/error_messages", model: resource %>

  <%= form_with model: resource, url: session_path(resource_name), local: true, class: "auth-form" do |f| %>
    <div class="field-group">
      <label class="field-label">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-input", placeholder: "example@mail.com" %>
    </div>

    <div class="field-group">
      <label class="field-label">パスワード</label>
      <%= f.password_field :password, autocomplete: "current-password", class: "field-input", placeholder: "••••••" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="auth-check">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "ログイン状態を保持" %>
      </div>
    <% end %>

    <%= f.submit "ログイン", class: "auth-submit" %>
  <% end %>

  <div class="auth-switch">
    アカウントがない方は <%= link_to "新規登録", new_user_registration_path %>
  </div>
</div>
